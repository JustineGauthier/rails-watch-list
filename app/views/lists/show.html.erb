<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= image_tag bookmark.movie.poster_url, alt: "poster of the movie", width: 200 %></li>
    <li ><strong><%= bookmark.movie.title %></strong></li>
    <li ><%= bookmark.movie.overview %></li>
    <li ><%= bookmark.comment %></li>
